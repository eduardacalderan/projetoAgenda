<%- include('includes/head') %> <%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-5">
      <h1 class="text-center">Contatos</h1>
      <p class="text-center lead">  <% if(user) {%>
        <i><span style="font-weight: 600;"><%- user.name  %></span></i>, <% } %> adicione ou edite contatos
      </p>

      <%- include('includes/messages') %>

      <% if(contact._id) { %>
      <form class="form-cadastro contact" action="/contact/edit/<%= contact._id %>" method="POST">
      <% } else { %>
          <form class="form-cadastro contact" action="/contact/register" method="POST">
      <% } %> 

        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <div class="form-group">
          <label>Nome</label>
          <input
            value="<%= contact.name %>"
            type="text"
            class="form-control"
            name="name"
          />
        </div>

        <div class="form-group">
          <label>Sobrenome</label>
          <input
            value="<%= contact.surname %>"
            type="text"
            class="form-control"
            name="surname"
          />
        </div>

        <div class="form-group">
          <label>Email</label>
          <input
            value="<%= contact.email %>"
            type="email"
            class="form-control"
            name="email"
          />
        </div>

        <div class="form-group">
          <label>Telefone</label>
          <input
            value="<%= contact.phone %>"
            type="tel"
            class="form-control"
            name="phone"
          />
        </div>

        <button type="submit" class="btn btn-primary my-3">Salvar</button>
      </form>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
