<%- include('includes/head') %> <%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-5">
      <h1 class="text-center">Agenda</h1>
      <p class="text-center lead">Seus contatos</p>

      <%- include('includes/messages') %>

    </div>      
    <% if(contacts.length > 0) { %> 
    <div class="table-responsive text-center">
      <table class="table my-3">
        <% contacts.forEach(contact => { %>
        <tr>
          <td><%= contact.name %></td>
          <td><%= contact.surname %></td>
          <td><%= contact.email %></td>
          <td><%= contact.phone %></td>
          <td>
            <a
              class="text-decoration-none"
              href="/contact/index/<%= contact._id %>"
              ><i class="bi bi-pencil" style="font-size: 1.5rem; color: cornflowerblue;"></i></i
            ></a>
          </td>
          <td>
            <a
              class="text-decoration-none"
              href="/contact/delete/<%= contact._id %>"
              ><i class="bi bi-trash" style="font-size: 1.5rem; color: rgb(237, 100, 100);""></i></a
            >
          </td>
        </tr>
        <% }); %>
      </table>
    </div>
    <% } else { %>
      <p class="text-center lead">Não há contatos registrados</p>
    <% } %>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
